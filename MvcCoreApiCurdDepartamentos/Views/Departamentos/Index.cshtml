@model IEnumerable<MvcCoreApiCurdDepartamentos.Models.Departamento>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-controller="Departamentos" 
        asp-action="Create"
        class="btn btn-success">
        Create New
    </a>
</p>
<table class="table table-striped table-warning">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.IdDepartamento)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Localidad)
            </th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.IdDepartamento)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Localidad)
            </td>
            <td>
                    <a asp-controller="Departamentos" 
                        asp-action="Details"
                        asp-route-id="@item.IdDepartamento"
                        class="btn btn-info">
                        Details
                    </a>
                    <a asp-controller="Departamentos"
                       asp-action="Edit"
                       asp-route-id="@item.IdDepartamento"
                       class="btn btn-warning">
                        Edit
                    </a>
                    <a asp-controller="Departamentos"
                       asp-action="Delete"
                       asp-route-id="@item.IdDepartamento"
                       class="btn btn-danger">
                        Delete
                    </a>
            </td>
        </tr>
}
    </tbody>
</table>
